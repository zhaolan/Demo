<?xml version="1.0" encoding="ISO-8859-1"?>
 
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

	<servlet>
        <servlet-name>caculatorSeverlet</servlet-name>
        <servlet-class>com.thoughtworks.tb.service.CaculatorSeverlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>caculatorSeverlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>caculatorSeverlet</servlet-name>
        <url-pattern>/caculatorForm</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>
            com.thoughtworks.tb.service.CaculatorListener
        </listener-class>
    </listener>
</web-app>
